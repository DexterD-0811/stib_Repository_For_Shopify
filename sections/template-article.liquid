<article class="py-8" itemscope itemtype="https://schema.org/BlogPosting">

  <!-- Main entity -->
  <meta itemprop="mainEntityOfPage" content="{{ article.url }}">

  <!-- Headline -->
  <h1 itemprop="headline">{{ article.title }}</h1>

  <!-- Author -->
  <span itemprop="author" itemscope itemtype="https://schema.org/Person">
    <meta itemprop="name" content="{{ article.author }}">
    {{ article.author }}
  </span>

  <!-- Publisher -->
  <div itemprop="publisher" itemscope itemtype="https://schema.org/Organization">
    <meta itemprop="name" content="{{ shop.name }}">
    {% if shop.brand.logo %}
      <div itemprop="logo" itemscope itemtype="https://schema.org/ImageObject">
        <meta itemprop="url" content="{{ shop.brand.logo | image_url: width: 300 }}">
      </div>
    {% endif %}
  </div>

  <!-- Date Published -->
  <time itemprop="datePublished" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
    {{ article.published_at | date: "%B %d, %Y" }}
  </time>

  <!-- Date Created -->
  <meta itemprop="dateCreated" content="{{ article.created_at | date: '%Y-%m-%d' }}">

  <!-- Image -->
  {% if article.image %}
    <img 
      src="{{ article.image | image_url: width: 1600 }}"
      alt="{{ article.image.alt | escape }}"
      itemprop="image"
    >
  {% endif %}

  <!-- Description -->
  <meta itemprop="description" content="{{ article.excerpt | strip_html | truncate: 160 }}">

  <!-- Article Body -->
  <div itemprop="articleBody">
    {{ article.content }}
  </div>

</article>


{% if blog.comments_enabled? %}
  <div id="comments" class="my-8">
    {% if article.comments_count > 0 %}
      <div class="flex-1 items-center justify-center mx-auto max-w-4xl px-4">
        <h1 class="text-lg mb-4 font-medium">See what people are saying</h1>
        
        {% paginate article.comments by 5 %}
          {% for comment in article.comments %}
            <div class="flex-1 border my-4 px-4 py-2 sm:px-6 sm:py-4 leading-relaxed">
              <span class="comment-author">{{ comment.author }}</span>  <span class="text-xs text-gray-400">{{ comment.created_at | date: format: 'default' }}</span>
              <p class="text-sm">{{ comment.content }}</p>
            </div>
          {% endfor %}

          {% if paginate.pages > 1 %}
            {{ paginate | default_pagination: previous_text: 'Previous', next_text: 'Next' }}
          {% endif %}
        {% endpaginate %}
        
      </div>
    {% else %}
      No Comments Yet
    {% endif %}
  </div>

  <div id="comment_form" class="mb-8">
    {% form 'new_comment', article %}
      <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4">

        {% if form.errors%}
          <div class="border p-5">
            <div class="flex flex-row items-center w-full my-3">
              <div class="text-red-500">
                {% render 'icon-failed' %}
              </div>
              <div class="text-sm font-medium ml-3">
                Comment was not be posted.
              </div>
            </div>
            <ul class="px-4 mb-3 ml-7 list-decimal">
              {% for error in form.errors %}
                <li>
                  <span>{{ form.errors.messages[error] }}</span>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% elsif form.posted_successfully? %}
          <div class="flex flex-row items-center w-full my-3 p-5">
            <div class="text-green-500">
              {% render 'icon-success' %}
            </div>
            <div class="text-sm font-medium ml-3">Comment is posted successfully.</div>
          </div>
        {% endif %}
        <!-- Name + Email row -->
        <div class="px-1 md:flex mb-3">
          <div class="px-3 md:w-1/2">
            <label for="comment_author" class="text-gray-700 font-medium uppercase text-xs mb-2">Name</label>
            <input type="text" id="comment_author" name="comment[author]"
              class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
              placeholder="Jane Doe" required>
          </div>

          <div class="px-3 md:w-1/2">
            <label for="comment_email" class="text-gray-700 font-medium uppercase text-xs mb-2">Email</label>
            <input type="email" id="comment_email" name="comment[email]"
              class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
              placeholder="Jane@Doe.com" required>
          </div>
        </div>

        <!-- Comment textarea -->
        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <label for="comment_content" class="text-gray-700 medium uppercase text-xs mb-2">Comment</label>
            <textarea id="comment_content" name="comment[body]"
              class="w-full text-gray-700 resize-none h-20 py-2 px-3 focus:outline-none border"
              placeholder="Your comment here..." required></textarea>
          </div>
        </div>

        <!-- Submit -->
        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <input type="submit"
              class="w-full cursor-pointer px-4 py-2 border text-base font-medium text-white bg-gray-900 hover:bg-gray-500"
              value="Post Comment">
          </div>
        </div>

      </div>
    {% endform %}
  </div>
{% endif %}




{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "default": true,
      "label": "Display Author Name"
    },
    {
      "type": "checkbox",
      "id": "enable_published_date",
      "default": true,
      "label": "Display Published Date"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
